@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="@Url.Action("Index", "Home", new { area = "Zels" })">
                @Nextsense.ResourcesCommon.ResourceManager.GetResourceValue("Zels.Shared._ZelsAdminLayout.cshtml.Title")
            </a>
            <div class="nav-collapse">
                @Html.Partial("_ZelsAdminNavigation")
                @Html.Partial("_LoginPartial")
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        @if (IsSectionDefined("Sidebar"))
        {
            <div class="span2">
                <div class="well sidebar-nav">
                    @RenderSection("Sidebar", false)
                </div>
            </div>
            <div class="span10">
                @RenderBody()
            </div>
        }
        else
        {
            <div class="span12">
                @RenderBody()
            </div>
        }
    </div>
    <!--/row-->
    <hr />
    <footer>
        <p>© Nextsense 2013</p>
    </footer>
</div>

